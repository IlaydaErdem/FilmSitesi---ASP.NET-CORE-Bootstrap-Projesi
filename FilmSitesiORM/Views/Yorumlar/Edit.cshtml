@model FilmSitesiModel.Models.Yorumlar

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutKullanici.cshtml";
}

<h1>Güncelle</h1>

<h4>Yorumlar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="YorumNo" />
            <div class="form-group">
                <label asp-for="KullaniciNo" class="control-label"></label>
                <input asp-for="KullaniciNo" class="form-control" />
                <span asp-validation-for="KullaniciNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FilmNo" class="control-label"></label>
                <input asp-for="FilmNo" class="form-control" />
                <span asp-validation-for="FilmNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aciklama" class="control-label"></label>
                <input asp-for="Aciklama" class="form-control" />
                <span asp-validation-for="Aciklama" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YildizSayisi" class="control-label"></label>
                <input asp-for="YildizSayisi" class="form-control" />
                <span asp-validation-for="YildizSayisi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Geri Dön</a>
</div>

